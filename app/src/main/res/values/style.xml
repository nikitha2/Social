<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="social" parent="Theme.Social">


    </style>

    <style name="userNamePasswordStyle" parent="FirebaseUI.TextInputLayout.EmailField">
      <item name="android:padding">@dimen/inner_frame_layout_padding</item>
        <item name="android:layout_margin">@dimen/margin8</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="userNamePasswordBtnStyle" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">@dimen/margin8</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerSize">50%</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="homeScreenText" parent="TextAppearance.AppCompat.Title">
        <item name="android:layout_margin">@dimen/margin8</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity" tools:ignore="DuplicateDefinition">left|center</item>

    </style>

    <style name="homeScreenText1" parent="TextAppearance.AppCompat.Title">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity" tools:ignore="DuplicateDefinition">top|center_horizontal</item>
    </style>

    <style name="homeScreenText2" parent="TextAppearance.AppCompat.Title">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity" tools:ignore="DuplicateDefinition">top|center_horizontal</item>
    </style>

    <style name="roundedImageViewRounded"  parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>