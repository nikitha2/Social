<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:layout_marginTop="@dimen/margin8"
    android:background="@color/black">

    <androidx.cardview.widget.CardView
        android:id="@+id/pofile_image"
        android:layout_width="@dimen/zerodp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:cardCornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintRight_toLeftOf="@id/pofile_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/roundedimage_pofile_image_search"
            style="@style/circleImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/socail"
            android:contentDescription="@+id/roundedimage_pofile_image_search" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/pofile_name"
        style="@style/homeScreenText2"
        android:layout_width="325dp"
        android:layout_height="26dp"
        android:gravity="start"
        android:text="@string/username"
        android:textSize="@dimen/text16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintLeft_toRightOf="@id/pofile_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <ImageView
        android:id="@+id/pofile_avail"
        android:layout_width="@dimen/zerodp"
        android:layout_height="@dimen/zerodp"
        android:padding="@dimen/margin6"
        android:src="@drawable/available"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintRight_toLeftOf="@id/pofile_postsno"
        app:layout_constraintTop_toBottomOf="@id/pofile_name"
        app:layout_constraintLeft_toRightOf="@id/pofile_image"
        android:contentDescription="@string/is_user_avalible" />

    <TextView
        android:id="@+id/pofile_postsno"
        style="@style/homeScreenText2"
        android:layout_width="@dimen/zerodp"
        android:layout_height="0dp"
        android:gravity="start"
        android:text="@string/available"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/text12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintLeft_toRightOf="@id/pofile_avail"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pofile_name"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintWidth_percent="0.8" />
</androidx.constraintlayout.widget.ConstraintLayout>